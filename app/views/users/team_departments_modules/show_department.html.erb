<% provide(:head_title, t('views.department.links.show')) %>
<% provide(:page_title, t('views.department.links.show')) %>

<div class="card department-data">
  <div class="card-header">
    <h3 class="card-title">Departamento #<%= @department.id %></h3>
  </div>
  <div class="card-body">
    <p>
      <strong><%= t('activerecord.attributes.department.name') %>: </strong>
      <%= @department.name %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.description') %>:</strong>
      <%= @department.description %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.initials') %>:</strong>
      <%= @department.initials %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.local') %>:</strong>
      <%= @department.local %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.phone') %>:</strong>
      <%= @department.phone %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.email') %>:</strong>
      <%= @department.email %>
    </p>
  </div>
</div>

<div class="card team">
  <div class="card-header">
    <h3 class="card-title">Equipe</h3>
  </div>
  <div class="card-body">

    <div class="table-responsive">
      <table class="table card-table table-striped table-vcenter table-options">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.department.name') %></th>
            <th><%= t('activerecord.attributes.department.email') %></th>
            <th><%= t('activerecord.attributes.department.role') %></th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
           <%= render partial: "department_users", collection: @department_users %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex mt-3 footer">
  <%= link_to t('views.links.back'), users_team_departments_modules_path, class: 'btn btn-secondary' %>
</div>
