<% provide(:head_title, t('views.department.links.show')) %>
<% provide(:page_title, t('views.department.links.show')) %>

<div class="card department-data">
  <div class="card-header">
    <h3 class="card-title">Departamento #<%= @department.id %></h3>
  </div>
  <div class="card-body">
    <p>
      <strong><%= t('activerecord.attributes.department.name') %>: </strong>
      <%= @department.name %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.description') %>:</strong>
      <%= @department.description %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.initials') %>:</strong>
      <%= @department.initials %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.local') %>:</strong>
      <%= @department.local %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.phone') %>:</strong>
      <%= @department.phone %>
    </p>
    <p>
      <strong><%= t('activerecord.attributes.department.email') %>:</strong>
      <%= @department.email %>
    </p>
  </div>
</div>

<div class="card modules">
  <div class="card-header">
    <h3 class="card-title">MÃ³dulos</h3>
    <div class="card-options">
      <%= link_to t('views.department_module.links.new'),
                  new_admins_department_module_path(@department),
                  class: 'btn btn-outline-primary btn-sm ml-2' %>
    </div>
  </div>
  <div class="card-body">

    <div class="table-responsive">
      <table class="table card-table table-striped table-vcenter table-options">
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.department_module.name') %></th>
            <th><%= t('activerecord.attributes.department_module.description') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @department.modules %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<div class="d-flex mt-3 footer">
  <%= link_to t('views.links.back'), admins_departments_path, class: 'btn btn-secondary' %>
  <%= link_to t('views.links.edit'), edit_admins_department_path(@department), class: 'btn btn-primary ml-auto' %>
</div>
