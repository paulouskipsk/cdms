<% provide(:head_title, t('views.session.password.new.title')) %>
<% provide(:title, t('views.session.password.new.subtitle')) %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('views.session.password.new.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<% provide(:link) do %>
  <%= t('views.session.password.new.forget') %>, <%= link_to t('views.session.password.new.links.back'), new_session_path(resource_name) %> <%= t('views.session.password.new.back_to_login') %>
<% end %>
