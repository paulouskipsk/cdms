<% provide(:head_title, t('views.session.password.edit.title')) %>
<% provide(:title, t('views.session.password.edit.title')) %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t('views.session.password.edit.new_password'),
                required: true,
                autofocus: true,
                hint: (t('views.session.password.edit.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('views.session.password.edit.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<% provide(:link) do %>
  <%= t('views.session.password.new.forget') %>, <%= link_to t('views.session.password.new.links.back'), new_session_path(resource_name) %> <%= t('views.session.password.new.back_to_login') %>
<% end %>
